{{#each model as |blogpost|}}
  {{#if blogpost.id}}
    <h1>{{blogpost.title}}</h1>
    <p>{{blogpost.body}}</p>
    <div>
      <span class="badge">Posted on {{blogpost.datePosted}}</span>
      <span class="badge">Posted by {{blogpost.user}}</span>
    </div>
    <hr>
  {{/if}}
{{else}}
  Error!
{{/each}}