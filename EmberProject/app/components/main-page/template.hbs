<br>
<div class="container">
  <div class="col-md-12">
      {{#if session.isAuthenticated}}
        <button {{action "createPost"}} type="button" class="btn btn-primary">Create Post</button>
      {{/if}}
    <br><br>
    {{#each model as |blogpost|}}
      {{#if blogpost.id}}
        {{view-post blogpost=blogpost}}
      {{/if}}
    {{else}}
      No posts!
    {{/each}}
  </div>
</div>
