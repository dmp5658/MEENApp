<html lang="en">

  <head>
    <style type="text/css">
      .logout-form {
        width: 340px;
          margin: 50px auto;
      }
        .logout-form form {
          margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }
        .logout-form h2 {
            margin: 0 0 15px;
        }
        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }
        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>
  </head>
  <body>
    <div class="logout-form">
      <form {{action 'signout' on='submit'}}>
        <h2 class="text-center">Log Out</h2>
        <p class="text-center">Are you sure you want to log out?</p>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Log Out</button>
        </div>
      </form>
    </div>

  </body>
</html>